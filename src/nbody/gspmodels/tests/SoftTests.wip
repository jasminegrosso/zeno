define plotDeltaPhi
  data $1_a$2_n$2.txt
  xcol 1
  log x
  ycol 3
  color 4
  points
  data $1_s$2_n$2.txt
  ycol 3
  color 2
  points
  color 1
  box BCNST BCNST
  xlabel log r
  ylabel \gD\d\gf\u
  mtext T -2.5 0.9 1.0 $1 $2  
end

define plotDeltaPhiAll
  erase
  submargin 3
  panel 2 2 1
  lim -5.2 -1.2 -0.012 0.012
